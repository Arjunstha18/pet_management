<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Pet Details</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white text-center">
                <h2 class="mb-0">Edit Pet Details</h2>
            </div>
            <div class="card-body">
                <!-- Form for Editing Pet -->
                <form method="POST" action="/~2359011/pet_management/public/update" class="needs-validation" novalidate>
                    <input type="hidden" name="id" value="{{ pet.id }}">

                    <!-- Name and Species Row -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" name="name" id="name" placeholder="Enter pet's name" value="{{ pet.name }}" required>
                            <div class="invalid-feedback">Please enter the pet's name.</div>
                        </div>
                        <div class="col-md-6">
                            <label for="species" class="form-label">Species</label>
                            <input type="text" class="form-control" name="species" id="species" placeholder="Enter pet's species" value="{{ pet.species }}" required>
                            <div class="invalid-feedback">Please enter the pet's species.</div>
                        </div>
                    </div>

                    <!-- Owner and Age Row -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="owner" class="form-label">Owner</label>
                            <input type="text" class="form-control" name="owner" id="owner" placeholder="Enter pet's owner" value="{{ pet.owner }}" required>
                            <div class="invalid-feedback">Please enter the pet's owner.</div>
                        </div>
                        <div class="col-md-6">
                            <label for="age" class="form-label">Age</label>
                            <input type="number" class="form-control" name="age" id="age" placeholder="Enter pet's age" value="{{ pet.age }}" required>
                            <div class="invalid-feedback">Please enter the pet's age.</div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">Update Pet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS for Form Validation -->
    <script>
        // Bootstrap form validation
        (function() {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.prototype.forEach.call(forms, function(form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
</body>
</html>
